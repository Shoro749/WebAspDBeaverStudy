@model List<WebAspDBeaverStudy.Data.Entities.ProductEntity>

<h1 class="text-center">Products</h1>

<div class="container">
    <a href="/" class="btn btn-success">Back</a>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="searchName" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-3">
            <input type="number" id="searchPrice" class="form-control" placeholder="Max price" />
        </div>
        <div class="col-md-3">
            <button id="searchButton" class="btn btn-primary">Search</button>
        </div>
    </div>

    <div class="row" id="productList">
        @foreach (var item in Model)
        {
            <div class="col-md-3 product-item" data-name="@item.Name" data-price="@item.Price" id="@("ProductItem" + item.Id)">
                <div class="card" style="width: 100%;">
                    <div id="carouselExampleIndicators_@item.Id" class="carousel slide">
                        <div class="carousel-indicators">
                            @for (int i = 0; i < item.ProductImages.Count; i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators_@item.Id" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @for (int i = 0; i < item.ProductImages.Count; i++)
                            {
                                var imgItem = item.ProductImages.ElementAt(i);
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <picture>
                                        <!-- Image for screens 1280px and above -->
                                        <source media="(min-width: 1280px)" srcset="/uploading/600_@imgItem.Image">

                                        <!-- Image for screens 992px and above -->
                                        <source media="(min-width: 992px)" srcset="/uploading/300_@imgItem.Image">

                                        <!-- Image for screens 768px and above -->
                                        <source media="(min-width: 768px)" srcset="/uploading/600_@imgItem.Image">

                                        <!-- Image for screens 360px and above -->
                                        <source media="(min-width: 360px)" srcset="/uploading/600_@imgItem.Image">

                                        <!-- Fallback image if none of the above conditions match -->
                                        <img src="/uploading/300_@imgItem.Image" class="card-img-top" alt="Responsive Image Example">
                                    </picture>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators_@item.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators_@item.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@item.Name @item.Price $</h5>
                        <p class="card-text">@item.Category.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="/lib/axios/axios.min.js"></script>
    <script>
        document.getElementById('searchButton').addEventListener('click', function () {
            var name = document.getElementById('searchName').value.toLowerCase();
            var maxPrice = parseFloat(document.getElementById('searchPrice').value) || Infinity;

            var productItems = document.querySelectorAll('.product-item');
            productItems.forEach(function (item) {
                var productName = item.getAttribute('data-name').toLowerCase();
                var productPrice = parseFloat(item.getAttribute('data-price'));

                if (productName.includes(name) && productPrice <= maxPrice) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
}
