@model List<WebAspDBeaverStudy.Data.Entities.CategoryEntity>

<h1 class="text-center">Choose categoty</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 100%;">
                    <img src="/uploading/@item.Image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="#" class="btn btn-primary" data-delete="@item.Id">Delete</a>
                        <a class="btn btn-primary" data-edit="@item.Id" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal" id="modalDelete" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ви дійсно бажаєте видалити</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Буде проведено видалення <span id="categoryName"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmDelete">Видалити</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelDelete">Скасувати</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            var modalDelete = new bootstrap.Modal(document.getElementById('modalDelete'));
            var buttonsDelete = document.querySelectorAll('[data-delete]');
            var buttonsEdit = document.querySelectorAll('[data-edit]');

            console.log("Loading app", buttonsDelete);
            buttonsDelete.forEach(btn => {
                btn.addEventListener("click", function (event) {
                    event.preventDefault();
                    var id = this.getAttribute('data-delete');
                    modalDelete.show();

                    confirmDelete.addEventListener("click", () => {
                        fetch(`/Main/Delete/${id}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        })
                        modalDelete.hide();
                    });

                    cancelDelete.addEventListener("click", () => {
                        modalDelete.hide();
                    });
                });
            });

            buttonsEdit.forEach(btn => {
                btn.addEventListener("click", function (event) {
                    event.preventDefault();
                    var id = this.getAttribute('data-edit');
                    window.location.href = `/Main/Edit/${id}`;
                });
            });
        });
    </script>
}