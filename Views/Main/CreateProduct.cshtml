@model WebAspDBeaverStudy.Models.Product.ProductCreateViewModel

<h1 class="text-center">Додати новий продукт</h1>

<div class="container">
    <div class="row">
        <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
            @* <input type="hidden" asp-for="CategoryId" /> *@
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input type="number" class="form-control" asp-for="Price">
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Категорія</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Photos" class="form-label"></label>
                <input type="file" class="form-control" asp-for="Photos" multiple />
            </div>
            <button type="submit" class="btn btn-primary">Додати</button>
        </form>
    </div>
</div>